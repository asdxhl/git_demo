import java.util.Scanner;

public class Code_8 {

	public static void main(String[] args) {
		/*创建Scanner对象*/
		Scanner input=new Scanner(System.in);
		//输入一个十六进制数
		System.out.print("Enter a hex nummber: ");
		String hex=input.nextLine();
		
			
		System.out.println("The decimal value for hex number "+hex+" is "+hexToDecimal(hex.toUpperCase()));
	}
	//判断输入的数是否是十六进制数
	public static void hexToDec(String hexString) throws HexFormatException{
		for (int i=0;i<hexString.length();i++) {
			char hexChar=hexString.charAt(i);
			if(hexChar<'A' || hexChar>'F' || hexChar <'0' || hexChar>'9')
				throw new HexFormatException("The number is not a hexadecimal number");
		}
	}
	//十六进制数转换为十进制数
	public static int hexToDecimal(String hex){
		int decimalValue=0;
		for (int i=0;i<hex.length();i++) {
			char hexChar=hex.charAt(i);
			decimalValue=decimalValue*16+hexCharToDecimal(hexChar);
		}
		return decimalValue;
	}
	
	public static int hexCharToDecimal(char ch) {
		if(ch>='A' && ch<='F') 
			return 10+ch-'A';
		else
			return ch-'0';
	}
}
